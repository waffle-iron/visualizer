doctype html
html
  head
    link(rel="stylesheet",href="/styles/login.min.css")
  body
    .container
      .login-wrap
        h1 LOGIN
        span.alert= message
        form(action='/user/login', method='post')
          .form-group
            //- label Email
            input.form-control(placeholder="email",type='text', name='email')
          .form-group
            //- label Password
            input.form-control(placeholder="password",type='password', name='password')
          button.btn.btn-warning.btn-lg(type='submit') GO
